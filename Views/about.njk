{% extends "layout.njk" %}


{% block head %}
    <title>Sobre - {{ about.name }} </title>
{% endblock %}


{% block content %}

<div id="wrapper">
  <img src=" {{  about.avatar_url}} " alt=" {{ about.name}} ">
  <h1>{{ about.name }}</h1>
  <h3> {{ about.role }} </h3>
  <p> {{ about.description }}</p>
</div>

<div id="links-footer" class="links">
      {% for link in about.links %}
  <a href=" {{ link.url }}" target="_blank" rel="nonopener noreferrer"> {{ link.name }}</a>
{% endfor %}
</div>

{% endblock %}